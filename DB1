    result = StringVar()
    def Selected_listbox(event):
        global Transactions
        Transactions=""
        selection = event.widget.curselection()
        if len(selection)==0:
            return False
        index = selection[0]
        value = event.widget.get(index)
        result.set(value)
        list_val1 = [Lst1.get(ANCHOR)]   
        for rw in list_val1:
            Lst2.insert(END,rw)
            Lst1.delete(ANCHOR)
            
